<UserControl x:Class="NodeCalculator.Views.Nodes.NodeLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeCalculator.Views.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Line X1="{Binding LineFromX.Value}" Y1="{Binding LineFromY.Value}"
          X2="{Binding LineToX.Value}" Y2="{Binding LineToY.Value}"
          Stroke="{Binding Color}"
          StrokeThickness="2"
          Visibility="{Binding Visible.Value}"/>
</UserControl>
