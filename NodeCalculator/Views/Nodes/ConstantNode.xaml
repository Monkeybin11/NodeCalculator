<UserControl x:Class="NodeCalculator.Views.Nodes.ConstantNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeCalculator.Views.Nodes"
             xmlns:dd="urn:gong-wpf-dragdrop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border 
                Background="LightBlue"
                BorderBrush="DarkBlue"
                BorderThickness="2"
                CornerRadius="5" />

        <TextBox Width="50" Height="20" Margin="5" Text="{Binding InputValue.Value, UpdateSourceTrigger=PropertyChanged}" />

        <Border DataContext="{Binding Out[0]}"
                Width="15" Height="15" Background="DarkBlue" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                dd:DragDrop.IsDragSource="True"
                dd:DragDrop.IsDropTarget="True" 
                dd:DragDrop.DropHandler="{Binding}"/>
    </Grid>
  
</UserControl>
