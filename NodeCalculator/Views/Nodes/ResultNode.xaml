<UserControl x:Class="NodeCalculator.Views.Nodes.ResultNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeCalculator.Views.Nodes"
             mc:Ignorable="d" 
             xmlns:dd="urn:gong-wpf-dragdrop"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border 
                Background="LightPink"
                BorderBrush="DarkRed"
                BorderThickness="2"
                CornerRadius="5" />
        <Label Content="Result" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Border DataContext="{Binding In[0]}"
                Width="15" Height="15" Background="DarkRed"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                dd:DragDrop.IsDragSource="True"
                dd:DragDrop.IsDropTarget="True" 
                dd:DragDrop.DropHandler="{Binding}"
                    Grid.Column="0">

        </Border>

    </Grid>
</UserControl>
