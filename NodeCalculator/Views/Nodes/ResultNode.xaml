<UserControl x:Class="NodeCalculator.Views.Nodes.ResultNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeCalculator.Views.Nodes"
             mc:Ignorable="d" 
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:parts="clr-namespace:NodeCalculator.Views.NodeParts"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border x:Name="nodeBorder" Background="LightPink" BorderBrush="DarkRed" BorderThickness="2" CornerRadius="5" Margin="0,10,0,10"/>

        <parts:NodeConnector DataContext="{Binding In[0]}" ConnctColor="DarkRed" VerticalAlignment="Top" />
        
        <Label Content="Result" HorizontalAlignment="Center" VerticalAlignment="Center"/>


    </Grid>
</UserControl>
