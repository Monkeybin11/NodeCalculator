<UserControl x:Class="NodeCalculator.Views.NodeParts.NodeConnector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeCalculator.Views.NodeParts"
             mc:Ignorable="d" 
             xmlns:dd="urn:gong-wpf-dragdrop"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="ConnectBorder"
            Width="15" Height="15" Background="DarkBlue" CornerRadius="7" Margin="1"
			HorizontalAlignment="Center" VerticalAlignment="Bottom"
			dd:DragDrop.IsDragSource="True"
			dd:DragDrop.IsDropTarget="True" 
            dd:DragDrop.MinimumHorizontalDragDistance="0"
            dd:DragDrop.MinimumVerticalDragDistance="0"
			dd:DragDrop.DropHandler="{Binding}"/>
</UserControl>
